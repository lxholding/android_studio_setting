<application>
  <component name="TodoConfiguration">
    <pattern pattern="//\s*\btodo\b.*" />
    <pattern pattern="//\s*\bfixme\b.*" />
    <pattern pattern="//\s*\binfo\b.*" />
    <filter name="todo">
      <pattern index="0" />
    </filter>
    <filter name="fixme">
      <pattern index="1" />
    </filter>
    <filter name="info">
      <pattern index="2" />
    </filter>
  </component>
</application>